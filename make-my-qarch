    '1')
        yaourt -S bleachbit wipe wipetrash --needed
        echo ""
    ;;
    '1a')
        yaourt -S bleachbit wipe wipetrash --needed --noconfirm
        echo ""
    ;;
    '2')
        pacman -S kdeutils-sweeper wipe --needed
        echo ""
    ;;

